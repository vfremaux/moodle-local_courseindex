{{!
    @template local_courseindex/category

    Shows displayes rendering of a a course category level

    Classes required for JS:
    * none

}}

<div class="browser-{{current}}-category row-fluid">

{{#hasup}}
    <div class="browser-{{current}}-category-label span2">
    <a href="{{{upcaturl}}}"><img src="{{{uppixurl}}}" class="courseindex-browse-up"></a>
    </div>
{{/hasup}}

<div class="browser-{{current}}-category-info span{{catspan}}">
{{#issub}}
        <a href="{{{caturl}}}">{{{catname}}}</a>
{{/issub}}
{{^issub}}
    {{{catname}}}
{{/issub}}

</div>

<div id="browser-cat{{catid}}" class="browser-{{current}}-category-count span1">
<script type="text/javascript">$('#browser-cat{{catid}}').animateNumber({ number: {{coursecount}} });</script>
</div>

</div>
