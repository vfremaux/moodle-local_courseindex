{{!
    @template local_courseindex/magistereviewcourse

    Shows displayes rendering of a a course information.

    Classes required for JS:
    * none

}}
<!-- local_courseindex/magistereviewcourse -->
<div class="standard-course-detail">
    <h1>{{fullname}}</h1>

    {{#hasimage}}
    <div class="course-image">
        <img src="{{{thumburl}}}" style="width:100%" />
    </div>
    {{/hasimage}}

    <div class="course-summary">
        {{{description}}}
    </div>

    {{#usecustomlabelmtd}}

    {{{authors}}}

    {{{metadata}}}

    {{{classifiers}}}

    {{/usecustomlabelmtd}}
</div>
<!-- /local_courseindex/magistereviewcourse -->
